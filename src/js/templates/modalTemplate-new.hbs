{{#if poster_path}}
<img class="film-image" src="http://image.tmdb.org/t/p/w440_and_h660_face/{{poster_path}}" alt="Фильм" />
{{else}}
<img class="film-image" style="height:auto" src="https://via.placeholder.com/416x500?text=YOU%27RE+AWESOME+:)"
  alt="placeholder">
{{/if}}
<div class="info-section">
  <h2 class="title">{{title}}</h2>
  <p class="trailer-btn">
    <svg class="play-svg" width="24" height="24">
      <use href="./images/sprite.svg#icon-play"></use>
    </svg>
    Play Trailer</p>
  <div class="modal-info">
    <ul class="list-info">
      <li class="list-info-item">
        <span class="about-film about-film-votes">Vote / Votes</span><span class="about-film-vote">{{vote_average}}</span><span class="about-film-info vote-divider">  / </span>
        <span class="about-film-info vote-count">{{vote_count}}</span>
      </li>
      <li class="list-info-item">
        <span class="about-film about-film-popularity">Popularity</span><span class="about-film-info">{{popularity}}</span>
      </li>
      <li class="list-info-item">
        <span class="about-film about-film-title">Original Title</span><span class="about-film-info original-title">{{title}}</span>
      </li>
      <li class="list-info-item">
        <span class="about-film about-film-genre">Genre</span><span class="about-film-info">{{genre_ids}}</span>
      </li>
    </ul>
  </div>
  <div>
    <h3 class="subtitle">ABOUT</h3>
    {{#if poster_path}}
    <p class="description">"{{overview}}"</p>
    {{else}}
<p class="description">We're sorry, this movie has no description :(</p>
    {{/if}}
  </div>
  <button class="first add-btn" type="button">ADD TO WATCHED</button>
  <button class="second add-btn" type="button">ADD TO QUEUE</button>
  <button class="close-modal-btn" type="button">X</button>
</div>

