{{#each this}}
<li class="film-list-item" data-id="{{id}}">

    <div class="backdrop-btns">
        <div class="wrap-for-btns" data-id="{{id}}">
            <button type=" button " class=" backdrop-btn first-backdrop" data-id="{{id}}"> ADD TO WATCHED</button>
            <button type="button" class="backdrop-btn second-backdrop" data-id="{{id}}">ADD TO QUEUE</button>
        </div>
        <picture>
            {{#if poster_path}}
            <source srcset="https://image.tmdb.org/t/p/w500{{poster_path}}" media="(min-width: 1024px)" type="image/jpeg" />
        <source srcset="http://image.tmdb.org/t/p/w440_and_h660_face{{poster_path}}" media="(min-width: 768px)"
            type="image/jpeg" />
        <source srcset="http://image.tmdb.org/t/p/w220_and_h330_face{{poster_path}}" media="(min-width: 320px)"
            type="image/jpeg" />
            <img class="film-image" src="http://image.tmdb.org/t/p/w440_and_h660_face/{{poster_path}}"
                alt="film poster">
            {{else}}
            <img class="film-image" style="height:auto"
                src="https://via.placeholder.com/400x600?text=YOU%27RE+AWESOME+:)" alt="film poster">
            {{/if}}
        </picture>
    </div>
   
    <div class="film-list-wrapper">
        <h3 class="film-name">"{{title}}"</h3>
        <p class="film-about">{{genre_ids}} | {{release_date}} <span class="mark">{{vote_average}}</span></p>
    </div>
</li>
{{/each}}